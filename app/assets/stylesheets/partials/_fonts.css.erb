@font-face {
    font-family: 'Nevis';
    src: url('<%= asset_path "fonts/nevis-webfont.eot" %>');
    src: url('<%= asset_path "fonts/nevis-webfont.eot" %>?#iefix') format('embedded-opentype'),
         url('<%= asset_path "fonts/nevis-webfont.woff" %>') format('woff'),
         url('<%= asset_path "fonts/nevis-webfont.ttf" %>') format('truetype'),
         url('<%= asset_path "fonts/nevis-webfont.svg" %>#Nevis') format('svg');
    font-weight: normal;
    font-style: normal;
}